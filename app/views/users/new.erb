<form action="/users/new" method="post">

	Username: <input name="name" type="text" value="<%= @user.name %>" placeholder="Name">

	Email address: <input name="email" type="text" value="<%= @user.email %>" placeholder="Email">

	Password: <input name="password" type="password" placeholder="Password">

	Confirm password: <input name="password_confirmation" type="password" placeholder="Confirm password">
	
	<input type="submit" value="Sign up" class='button'>
</form>